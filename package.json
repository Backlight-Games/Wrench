{
	"name": "wrenchbot",
	"version": "2.0.0",
	"description": "Fun and Helpful Discord Bot.",
	"main": "wrenchbot.js",
	"scripts": {
		"start": "pm2 start .\\wrenchbot.js --name WrenchBot --watch --max-memory-restart 512M",
		"stop": "pm2 delete WrenchBot",
		"restart": "npm stop && npm start",
		"logs": "pm2 logs WrenchBot",
		"status": "pm2 list WrenchBot"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Encode42/WrenchBot.git"
	},
	"author": "Encode42",
	"license": "GPL-3.0-or-later",
	"bugs": {
		"url": "https://github.com/Encode42/WrenchBot/issues"
	},
	"homepage": "https://encode42.dev/wrenchbot",
	"dependencies": {
		"@josh-providers/sqlite": "^1.0.16",
		"array-average": "^0.1.2",
		"async-request": "^1.2.0",
		"baidu-translate-api": "^0.4.3",
		"better-sqlite-pool": "^0.2.3",
		"binstring": "^0.2.1",
		"center-align": "^1.0.1",
		"common-tags": "^1.8.0",
		"cron": "^1.8.2",
		"discord-anti-spam": "^2.4.1",
		"discord.js": "^12.4.1",
		"discord.js-commando": "github:discordjs/Commando",
		"enmap": "^5.8.0",
		"figlet": "^1.5.0",
		"franc": "^5.0.0",
		"fs": "0.0.1-security",
		"hastebin": "^0.2.1",
		"install-changed": "^1.1.0",
		"josh": "^0.2.0",
		"jsonpath": "^1.0.2",
		"limiter": "^1.1.5",
		"lodash": "^4.17.20",
		"merge-json": "0.1.0-b.3",
		"minimist": "^1.2.5",
		"moment": "^2.29.1",
		"moment-duration-format": "^2.3.2",
		"pm2": "^4.5.0",
		"random": "^2.2.0",
		"request": "^2.88.2",
		"sort-json": "^2.0.0",
		"string-similarity": "^4.0.2",
		"tictactoe-complex-ai": "^1.0.1",
		"wikijs": "^6.0.1",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^3.10.0"
	},
	"devDependencies": {
		"eslint-config-standard": "^16.0.1",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsonc": "^0.7.1",
		"eslint-plugin-markdown": "^2.0.0-rc.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-sonarjs": "^0.5.0",
		"eslint-plugin-standard": "^4.1.0",
		"eslint-plugin-unicorn": "^23.0.0"
	},
	"engines": {
		"node": "14.x"
	},
	"eslintConfig": {
		"env": {
			"commonjs": true,
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
		},
		"extends": [
			"plugin:jsonc/auto-config",
			"plugin:markdown/recommended",
			"plugin:security/recommended",
			"plugin:sonarjs/recommended",
			"plugin:unicorn/recommended",
			"standard"
		],
		"rules": {
			"block-spacing": ["error", "never"],
			"brace-style": "off",
			"curly": "off",
			"eol-last": ["error", "never"],
			"eqeqeq": "warn",
			"func-call-spacing": ["error", "never"],
			"handle-callback-err": "off",
			"indent": ["error", "tab", { "SwitchCase": 1, "MemberExpression": "off", "flatTernaryExpressions": true }],
			"key-spacing": "off",
			"multiline-ternary": 0,
			"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
			"no-multi-spaces": "off",
			"no-prototype-builtins": "off",
			"no-return-assign": "off",
			"no-self-assign": "off",
			"no-tabs": "off",
			"no-undef": "warn",
			"no-unused-expressions": "warn",
			"no-unused-vars": "off",
			"one-var": "off",
			"quote-props": ["error", "always"],
			"quotes": ["error", "double", { "allowTemplateLiterals": true }],
			"security/detect-non-literal-fs-filename": "off",
			"security/detect-non-literal-regexp": "off",
			"security/detect-non-literal-require": "off",
			"security/detect-object-injection": "off",
			"security/detect-unsafe-regex": "off",
			"semi-spacing": ["error", { "before": false, "after": true }],
			"semi-style": ["error", "last"],
			"semi": ["error", "always", { "omitLastInOneLineBlock": true }],
			"sonarjs/cognitive-complexity": "off",
			"sonarjs/no-duplicate-string": ["error", 5],
			"space-before-function-paren": ["off"],
			"unicorn/catch-error-name": "off",
			"unicorn/filename-case": "off",
			"unicorn/no-nested-ternary": "off",
			"unicorn/no-null": "off",
			"unicorn/no-process-exit": "off",
			"unicorn/prefer-number-properties": "off",
			"unicorn/prevent-abbreviations": "off"
		},
		"ignorePatterns": ["!node_modules/*"]
	}
}